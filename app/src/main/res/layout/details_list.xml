<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#b700ff"
        android:textSize="25dp"
        android:textStyle="italic"/>

    <CheckBox
        android:id="@+id/checkbox_done"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Done  ?" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update !" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Pick Category" />

    <CheckBox
        android:id="@+id/CheckBox_diy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DIY" />

    <CheckBox
        android:id="@+id/checkBox_chores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chore" />

    <CheckBox
        android:id="@+id/checkBox_shopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shopping" />

    <CheckBox
        android:id="@+id/checkBox_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise" />

    <CheckBox
        android:id="@+id/check_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other" />

    <Button
        android:id="@+id/showtasksbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Tasks List" />


</LinearLayout>